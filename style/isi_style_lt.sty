\def\titlep{%
    \thispagestyle{empty}%
    \null
    \begin{minipage}{\textwidth}%
        \begin{tabular}{c}%
            \if*\@relatore
                \large{UNIVERSIT\`A DEGLI STUDI DI BOLOGNA}\\[3mm]%
                \normalsize{Dipartimento di Informatica - Scienza e Ingegneria}\\[0.5mm]%
                \normalsize{Scuola di Ingegneria e Architettura}\\[0.5mm]%
                \normalsize{Corso di Laurea Magistrale Ingegneria e scienze informatiche}\\[0.7mm]%
            \fi
            \rule{13.0cm}{1.5pt}\\[10mm]%
            \huge{\@materia}\\%
        \end{tabular}%
    \end{minipage}%
    \vfill%
    \begin{center}%
        \textbf{\Large\uppercase\expandafter{\@titolo}}%
    \end{center}%
    \vfill%
    \begin{minipage}[t]{\textwidth}%
        \begin{tabular}{ll}%
            \if*\@relatore
                Relatore: \hspace{65mm} & Candidato: \\%
                \@relatore & \@laureando\\[5mm]%
            \else
                Tutor:\\
                \@tutor\\
            \fi
        \end{tabular}\\
        \begin{tabular}{l}%
            \if*\@correlatori
                \if*\@correlatore \\[27mm]
                \else \@correlatore \\[5mm] \fi
            \else \@correlatori \\ \fi
        \end{tabular} \\[5mm]%
        \if*\@relatore
            \centerline{Matricola:~\textit{\@matricola}}
        \else
            \centerline{\@laureando~-~\textit{Matricola: \@matricola}}
        \fi
        \vspace{1mm}\centerline{\rule{6.5cm}{0.5pt}}\\%
        \centerline{\@annoacc} %
    \end{minipage}%
    \null
    \newpage
}

